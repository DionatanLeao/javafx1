			<font>
				<Font name="System Bold" size="14.0" />
			</font>
		</Label>
		<TextField fx:id="txtNumber1" layoutX="25.0" layoutY="100.0" promptText=" First number" />
		<TextField fx:id="txtNumber2" layoutX="25.0" layoutY="150.0" promptText="Second number" />
